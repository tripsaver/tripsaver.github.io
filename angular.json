{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "hotel-affiliate": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              },
              {
                "glob": "standalone-index.html",
                "input": ".",
                "output": "."
              },
              {
                "glob": "hotels-goa.html",
                "input": ".",
                "output": "."
              },
              {
                "glob": "test.html",
                "input": ".",
                "output": "."
              },
              {
                "glob": "index.html",
                "input": ".",
                "output": "."
              },
              {
                "glob": "**/*",
                "input": "styles",
                "output": "styles"
              },
              {
                "glob": "**/*",
                "input": "scripts",
                "output": "scripts"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            // "server": "src/main.server.ts",
            // "outputMode": "server",
            // "ssr": {
            //   "entry": "src/server.ts"
            // }
          },
          "configurations": {
            "production": {
              "budgets": [

              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "hotel-affiliate:build:production"
            },
            "development": {
              "buildTarget": "hotel-affiliate:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    }
  }
}
